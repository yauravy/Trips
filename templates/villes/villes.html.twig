{% extends 'base.html.twig' %}

{% block title %}Hello VillesController!{% endblock %}


{% block body %}
    <h2>List Villess</h2>
    {% if is_granted('ROLE_ADMIN') %}
        <a href="{{ path('add_villes') }}" class="text-decoration-none">Ajout Villes</a>
    {% endif %}
    <table class="table table-striped table-bordered ">
        <thead class="text-center">
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Nom</th>
            <th scope="col">Code Postal</th>
            <th scope="col">Action</th>
        </tr>
        </thead>
        <tbody>
        {% for ville in villes %}
            <tr class="text-center">
                <td>{{ ville.id }}</td>
                <td>{{ ville.nom }}</td>
                <td>{{ ville.codePostal }}</td>
                <td scope="row">
                    <div class="col">
                        <a href="{{ path('delete_ville', {'id': ville.id}) }}" class="text-decoration-none">delete</a>
                        <a href="{{ path('edit_villes', {'id': ville.id}) }}" class="text-decoration-none">edit</a>
                    </div>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
