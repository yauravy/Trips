{% extends 'base.html.twig' %}

{% block title %}Hello CampusController!{% endblock %}

{% block body %}
    <h2>List Campus</h2>
    {% if is_granted('ROLE_ADMIN') %}
        <a href="{{ path('campus_add') }}" class="text-decoration-none">Ajout Campus</a>
    {% endif %}
    <table class="table table-striped table-bordered ">
        <thead class="text-center">
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Nom</th>
                <th scope="col">Action</th>
            </tr>
        </thead>
        <tbody>
        {% for camp in campus %}
            <tr class="text-center">
                <td>{{ camp.id }}</td>
                <td>{{ camp.nom }}</td>
                <td scope="row">
                    <div class="col">
                        <a href="{{ path('campus_delete', {'id': camp.id}) }}" class="text-decoration-none">delete</a>
                        <a href="{{ path('campus_edit', {'id': camp.id}) }}" class="text-decoration-none">edit</a>
                    </div>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
